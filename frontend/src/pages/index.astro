---
import "../styles/global.css";
import Nav from "../components/react/nav/Nav";
import ThemeToggle from "../components/react/ThemeToggle";
import HeroSplitImage from "../components/astro/sections/HeroSplitImage.astro";
import SectionHighlight from "../components/astro/sections/SectionHighlight.astro";
import SectionTwoColumn from "../components/astro/sections/SectionTwoColumn.astro";
import SectionCentered from "../components/astro/sections/SectionCentered.astro";
import SectionFeatures from "../components/astro/sections/SectionFeatures.astro";
import FooterGlobal from "../components/astro/sections/FooterGlobal.astro";
import Card from "../components/astro/atomic/Card.astro";
import Link from "../components/astro/atomic/Link.astro";
import SectionPreTitle from "../components/astro/typography/SectionPreTitle.astro";
import SectionTitle from "../components/astro/typography/SectionTitle.astro";
import portrait from "../assets/images/portrait.svg";
import landscape from "../assets/images/landscape.svg";
import placeholder from "../assets/images/placeholder.svg";
import devdomLogoSlogan from "../assets/images/devdom-logo+slogan.png";
import devdomLogoSloganLight from "../assets/images/devdom-logo-slogan-light.png";
import footerBox from "../assets/images/decorations/footer-box.png";

const arrowIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/></svg>`;
const usersIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 11a4 4 0 1 0-8 0"/><path d="M2 20a6 6 0 0 1 12 0"/><path d="M17 20a5 5 0 0 1 5 0"/><path d="M18 9a3 3 0 1 0-6 0"/></svg>`;
const chartIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 3v18h18"/><path d="M7 15v-4"/><path d="M11 15V7"/><path d="M15 15v-8"/></svg>`;
const stackIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="4" rx="1"/><rect x="3" y="10" width="12" height="4" rx="1"/><rect x="3" y="16" width="8" height="4" rx="1"/></svg>`;
const shieldIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 3l8 4v6c0 5-3.5 7.5-8 9-4.5-1.5-8-4-8-9V7l8-4z"/><path d="M12 7v6"/><path d="M12 17h.01"/></svg>`;
const swapIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m3 7 3-3 3 3"/><path d="M6 4v14"/><path d="m21 17-3 3-3-3"/><path d="M18 20V6"/></svg>`;
const sparkIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 3l1.8 4.8L19 10l-5.2 2.2L12 17l-1.8-4.8L5 10l5.2-2.2L12 3z"/></svg>`;
const homeIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16"><path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z"/><path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z"/></svg>`;
const mailIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16v16H4z"/><path d="m22 6-10 7L2 6"/></svg>`;
const linkedinIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 8a6 6 0 0 1 6 6v6h-4v-6a2 2 0 0 0-2-2h-2v8h-4V8h6z"/><path d="M2 9h4v12H2z"/><circle cx="4" cy="4" r="2"/></svg>`;

const navItems = [
  { label: "Home", href: "/" },
  { label: "About", href: "/about" },
  {
    label: "Services",
    submenu: [
      { label: "Web Design", href: "/services/web-design" },
      {
        label: "SEO",
        submenu: [
          { label: "On-page SEO", href: "/services/seo/on-page" },
          { label: "Off-page SEO", href: "/services/seo/off-page" },
        ],
      },
      { label: "Marketing", href: "/services/marketing" },
    ],
  },
  { label: "Contact", href: "/contact" },
];

const approachCards = [
  {
    icon: usersIcon,
    title: "Clarity",
    description: "We align goals, risks, and hiring outcomes before execution starts.",
  },
  {
    icon: chartIcon,
    title: "Depth",
    description: "Profiles are vetted against real contribution data and stack relevance.",
  },
  {
    icon: stackIcon,
    title: "Confidence",
    description: "Delivery stays protected with structured check-ins and continuity support.",
  },
];

const textCards = [
  {
    title: "We build talent-aligned pipelines",
    description: "Your roadmap drives our sourcing model so hiring matches actual delivery needs.",
  },
  {
    title: "Dedicated to your mission outcomes",
    description: "We focus on measurable execution quality, not vanity metrics.",
  },
  {
    title: "Embedded for integrated execution",
    description: "Engineers operate inside your cadence with clear accountability.",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Devdom | Homepage</title>
    <meta name="description" content="AI-native engineering teams shaped around your roadmap. Explore Devdom's process, capabilities, and delivery model." />
  </head>
  <body class="min-h-screen bg-surface-page text-ink-primary">
    <div class="fixed top-4 right-4 z-50">
      <ThemeToggle client:load />
    </div>

    <Nav items={navItems} ctaLabel="Book a call" ctaHref="#" client:load />

    <main class="space-y-20 pb-20">
      <HeroSplitImage
        title="A new class of builders for an AI-first world."
        subtitle="AI-native engineering teams, shaped around your requirements and ready to ship fast, guaranteed by DevCover."
        linkText="DevCover"
        linkHref="#"
        ctaLabel="Let's build"
        ctaHref="#"
        imageSrc={portrait}
        imageAlt="Developer portrait"
      />

      <section class="max-w-7xl mx-auto px-6 space-y-8">
        <header class="text-center space-y-3">
          <SectionPreTitle>Our approach</SectionPreTitle>
          <SectionTitle>Delivery secured.</SectionTitle>
        </header>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {approachCards.map((item) => (
            <Card variant="icon" icon={item.icon} title={item.title} description={item.description} />
          ))}
        </div>
      </section>

      <section class="max-w-7xl mx-auto px-6">
        <SectionHighlight
          title="Backed by DevCover"
          subtitle="DevCover is a delivery assurance framework focused on continuity and execution quality."
          featureItems={[
            { icon: shieldIcon, label: "Replace any misfit" },
            { icon: usersIcon, label: "Match engine powered" },
            { icon: swapIcon, label: "Fast replacement turnaround" },
            { icon: homeIcon, label: "Continuity assurance SLA" },
          ]}
          footerLink={{ href: "#", text: "Learn more" }}
        />
      </section>

      <section class="max-w-7xl mx-auto px-6 space-y-10">
        <header class="space-y-3">
          <h2 class="text-h2 font-heading text-headings">Skip the guesswork with DevRep</h2>
          <h4 class="text-h4 font-heading text-text">We bring together builders with proven public impact to shape the software you deliver.</h4>
        </header>
        <SectionTwoColumn
          variant="text-left"
          heading="At the core of your stack"
          bodyText="We identify engineers who already contributed to your dependencies and roadmap."
          imageSrc={landscape}
          imageAlt="Technical graph view"
        />
        <SectionTwoColumn
          variant="text-right"
          heading="Real work. Real impact."
          bodyText="Profiles are filtered through contribution quality, context, and sustained delivery signal."
          imageSrc={portrait}
          imageAlt="Profile card view"
        />
        <SectionTwoColumn
          variant="text-left"
          heading="Beyond signal"
          bodyText="We validate consistency and practical fit so teams can hire with confidence."
          imageSrc={placeholder}
          imageAlt="Abstract workflow view"
        />
        <div>
          <Link href="#" suffixIcon={arrowIcon}>Learn more about DevRep</Link>
        </div>
      </section>

      <section class="max-w-7xl mx-auto px-6">
        <SectionCentered
          headline="Scale, without the lag with DevSight"
          description="We anticipate upcoming execution needs and maintain delivery readiness."
          linkHref="#"
          linkText="Learn about DevSight"
        />
      </section>

      <section class="max-w-7xl mx-auto px-6">
        <SectionFeatures
          headline="We handle the overhead, so you don't have to"
          description="Every Devdom engagement is operationally managed end to end."
          ctaHref="#"
          ctaText="Talk to us"
          features={[
            { icon: usersIcon, title: "Global expertise, without friction", description: "Distributed builders who integrate quickly with your team." },
            { icon: chartIcon, title: "Compliance & coverage", description: "Structured onboarding, milestones, and quality checkpoints." },
            { icon: stackIcon, title: "Consolidated billing", description: "One operational layer for your full execution setup." },
            { icon: shieldIcon, title: "Transparent by default", description: "Clear visibility into progress, risk, and continuity." },
          ]}
        />
      </section>

      <section class="max-w-7xl mx-auto px-6 space-y-8">
        <h2 class="text-h2 font-heading text-headings text-center">Strategic execution, built around you.</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {textCards.map((item) => (
            <Card variant="text" title={item.title} description={item.description} />
          ))}
        </div>
        <div class="text-center">
          <Link href="#" suffixIcon={arrowIcon}>Meet our team</Link>
        </div>
      </section>
    </main>

    <FooterGlobal
      ctaLogoSrc={devdomLogoSlogan}
      ctaLogoDarkSrc={devdomLogoSloganLight}
      ctaLogoAlt="Devdom logo and slogan"
      ctaBgSrc={footerBox}
      ctaMessage="Start building now. Skip the interview loop."
      ctaLabel="Let's build"
      ctaHref="#"
      columns={[
        {
          title: "Product",
          links: [
            { label: "DevCover", href: "#" },
            { label: "DevRep", href: "#" },
            { label: "DevSight", href: "#" },
            { label: "Engagement Tiers", href: "#" },
            { label: "AI builders", href: "#" },
          ],
        },
        {
          title: "Company",
          links: [
            { label: "About", href: "#" },
            { label: "Join our team", href: "#" },
            { label: "Contact us", href: "#" },
          ],
        },
        {
          title: "Legal",
          links: [
            { label: "Terms of use", href: "#" },
            { label: "Privacy policy", href: "#" },
            { label: "Cookie policy", href: "#" },
          ],
        },
      ]}
      contactItems={[
        { icon: mailIcon, label: "hello@devdom.com", href: "mailto:hello@devdom.com" },
        { icon: linkedinIcon, label: "@devdom.com", href: "https://linkedin.com", external: true },
      ]}
      copyrightText="Â© Copyright 2026. All Rights Reserved."
    />
  </body>
</html>
