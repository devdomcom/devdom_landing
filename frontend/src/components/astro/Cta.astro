---
const {
  headline = "Ready to ship blazing-fast pages?",
  subhead = "Astro + React (for islands only) + Tailwind give you speed, flexibility, and control over UX, SEO, and GEO.",
  ctaLabel = "Start the dev server",
  tone = "light", // "light" for light backgrounds, "dark" for dark backgrounds
} = Astro.props;

const container =
  tone === "dark"
    ? "bg-primary-900 text-white border-white/10 shadow-brand-03"
    : "bg-white text-gray-900 border-gray-200 shadow-brand-02";

const bodyText = tone === "dark" ? "text-gray-100" : "text-gray-700";
const linkText = tone === "dark" ? "text-secondary-blue-300 hover:text-white" : "text-secondary-blue-700 hover:text-primary-900";
---

<section class={`rounded-2xl p-6 backdrop-blur ${container}`}>
  <h2 class="text-2xl font-semibold text-inherit">{headline}</h2>
  <p class={`mt-2 text-base ${bodyText}`}>
    {subhead}
  </p>
  <div class="mt-6 flex flex-wrap items-center gap-3">
    <a
      class="inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-semibold text-white shadow-brand-03 transition hover:-translate-y-0.5 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
      style="
        background: var(--color-primary-500);
        border: 1px solid var(--color-primary-500);
      "
      href="https://docs.astro.build/en/getting-started/"
    >
      {ctaLabel}
      <span aria-hidden="true">â†’</span>
    </a>
    <a
      class={`text-sm font-semibold underline decoration-dotted underline-offset-4 ${linkText}`}
      href="https://tailwindcss.com/docs"
    >
      Tailwind docs
    </a>
  </div>
</section>
