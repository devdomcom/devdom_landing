---
const {
  headline = "Ready to ship blazing-fast pages?",
  subhead = "Astro + React (for islands only) + Tailwind give you speed, flexibility, and control over UX, SEO, and GEO.",
  ctaLabel = "Start the dev server",
  tone = "light", // "light" for light backgrounds, "dark" for dark backgrounds
} = Astro.props;

const container =
  tone === "dark"
    ? "bg-surface-strong text-ink-on-strong border border-border-contrast shadow-brand-03"
    : "bg-surface-card text-ink-primary border border-border-subtle shadow-brand-02";

const bodyText = tone === "dark" ? "text-ink-on-strong" : "text-ink-secondary";
const linkText = tone === "dark" ? "text-action-link hover:text-action-link-hover" : "text-action-link hover:text-action-link-hover";
---

<section class={`rounded-2xl p-6 backdrop-blur ${container}`}>
  <h2 class="text-2xl font-semibold text-inherit">{headline}</h2>
  <p class={`mt-2 text-base ${bodyText}`}>
    {subhead}
  </p>
  <div class="mt-6 flex flex-wrap items-center gap-3">
    <a
      class="inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-semibold text-action-primary-on shadow-brand-03 transition hover:-translate-y-0.5 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[color:var(--focus-ring-color)]"
      style="
        background: var(--action-primary);
        border: 1px solid var(--action-primary);
      "
      href="https://docs.astro.build/en/getting-started/"
    >
      {ctaLabel}
      <span aria-hidden="true">â†’</span>
    </a>
    <a
      class={`text-sm font-semibold underline decoration-dotted underline-offset-4 ${linkText}`}
      href="https://tailwindcss.com/docs"
    >
      Tailwind docs
    </a>
  </div>
</section>
