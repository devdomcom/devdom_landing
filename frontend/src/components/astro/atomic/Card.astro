---
const { variant = 'icon', ...props } = Astro.props;

let cardClass = 'rounded-[15px] px-8 py-10';
let contentClass = 'flex flex-col space-y-4';

if (variant === 'icon') {
  cardClass += ' border-2 border-[color:var(--card-icon-border)] bg-[color:var(--card-icon-bg)] text-center';
  contentClass += ' items-center';
} else if (variant === 'text') {
  cardClass += ' border-2 border-[color:var(--card-text-border)] bg-[color:var(--card-text-bg)]';
}
---

<div class={cardClass}>
  {variant === 'icon' && (
    <div class={contentClass}>
      {props.icon && <div class="flex justify-center text-[color:var(--card-icon-icon)]"><span set:html={props.icon}></span></div>}
      {props.title && <h3 class="text-h4 font-heading text-[color:var(--card-icon-title)]">{props.title}</h3>}
      {props.description && <p class="text-body-sm font-body text-[color:var(--card-icon-description)]">{props.description}</p>}
    </div>
  )}
  {variant === 'text' && (
    <div class={contentClass}>
      {props.title && <h3 class="text-h4 font-heading text-[color:var(--card-text-title)]">{props.title}</h3>}
      {props.description && <p class="text-body-sm font-body text-[color:var(--card-text-description)]">{props.description}</p>}
    </div>
  )}
</div>
