---
const { heading, items = [] } = Astro.props;
---

<div class="w-full rounded-[15px] border border-[color:var(--color-primary-100)] bg-surface-muted p-10 text-left">
  {heading && (
    <h3 class="text-body-lg font-body text-headings">{heading}</h3>
  )}
  <ul class="mt-6 flex flex-col gap-6">
    {items.map((item) => (
      <li class="flex items-center gap-4">
        <span class="text-primary-700" aria-hidden="true">
          {item.icon && <span class="block" set:html={item.icon}></span>}
        </span>
        <span class="text-body-md font-body text-headings">{item.label}</span>
      </li>
    ))}
  </ul>
</div>
