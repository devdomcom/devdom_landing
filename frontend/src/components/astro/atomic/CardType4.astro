---
const { heading, items = [] } = Astro.props;
---

<div class="w-full rounded-[15px] border border-[color:var(--card-type4-border)] bg-[color:var(--card-type4-bg)] p-10 text-left">
  {heading && (
    <h3 class="text-body-lg font-body text-[color:var(--card-type4-heading)]">{heading}</h3>
  )}
  <ul class="mt-6 flex flex-col gap-6">
    {items.map((item) => (
      <li class="flex items-center gap-4">
        <span class="text-[color:var(--card-type4-icon)]" aria-hidden="true">
          {item.icon && <span class="block" set:html={item.icon}></span>}
        </span>
        <span class="text-body-md font-body text-[color:var(--card-type4-text)]">{item.label}</span>
      </li>
    ))}
  </ul>
</div>
