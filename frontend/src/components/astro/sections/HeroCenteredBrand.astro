---
import Image from "../atomic/Image.astro";
import Button from "../atomic/Button.astro";

const { imageSrc, imageAlt, headline, description, ctaLabel, ctaHref } = Astro.props;
---

<section class="hero-centered-brand w-full bg-[color:var(--color-gray-900)] py-20">
  <div class="max-w-5xl mx-auto px-6">
    <div class="flex min-h-[360px] flex-col items-center justify-center text-center">
      {imageSrc && (
        <div class="mb-6">
          <img
            src={imageSrc.src}
            alt={imageAlt}
            class="mx-auto h-auto w-auto max-w-[240px]"
          />
        </div>
      )}
      {headline && (
        <h1 class="hero-centered-brand__title text-h1 font-heading text-[color:var(--color-white-soft)] max-w-3xl">
          {headline}
        </h1>
      )}
      {description && (
        <p class="hero-centered-brand__subtitle mt-6 text-h4 font-heading text-[color:var(--color-white-soft)] max-w-2xl">
          {description}
        </p>
      )}
      {ctaLabel && ctaHref && (
        <div class="mt-8">
          <Button variant="secondary" size="medium" href={ctaHref}>
            {ctaLabel}
          </Button>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  :global([data-theme="dark"]) .hero-centered-brand {
    background: var(--color-gray-900);
  }

  :global([data-theme="dark"]) .hero-centered-brand__title {
    color: var(--color-gray-100);
  }

  :global([data-theme="dark"]) .hero-centered-brand__subtitle {
    color: var(--color-gray-300);
  }
</style>
