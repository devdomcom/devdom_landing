---
const { items = [] } = Astro.props;
---

<section class="w-full">
  <div class="max-w-7xl mx-auto px-6">
    <div class="bg-surface-muted rounded-[15px] px-6 py-20">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 text-center place-items-center">
        {items.map((item) => (
          <div class="flex flex-col items-center">
            {item.icon && (
              <span class="text-primary-700" aria-hidden="true">
                <span class="block" set:html={item.icon}></span>
              </span>
            )}
            {item.title && (
              <h3 class="mt-4 text-h4 font-heading text-headings">{item.title}</h3>
            )}
            {item.description && (
              <p class="mt-3 text-body-md font-body text-text max-w-xs">
                {item.description}
              </p>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
