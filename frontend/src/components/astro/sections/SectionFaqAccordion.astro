---
const { items = [] } = Astro.props;
---

<section class="section-faq-accordion w-full">
  <div class="max-w-5xl mx-auto px-6">
    <div class="faq-accordion">
      {items.map((item) => (
        <details class="faq-item">
          <summary class="faq-summary">
            <span class="faq-question text-h4 font-heading text-headings">{item.question}</span>
            <span class="faq-icon" aria-hidden="true"></span>
          </summary>
          <div class="faq-content faq-answer text-body-md font-body text-text">
            {item.answer}
          </div>
        </details>
      ))}
    </div>
  </div>
</section>

<style>
  .faq-accordion {
    display: flex;
    flex-direction: column;
  }

  .faq-item {
    border-bottom: 1px solid var(--color-gray-400);
    padding: 22px 0;
  }

  .faq-summary {
    list-style: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    cursor: pointer;
  }

  .faq-summary::-webkit-details-marker {
    display: none;
  }

  .faq-content {
    padding-top: 14px;
  }

  .faq-icon {
    position: relative;
    width: 16px;
    height: 16px;
    flex: 0 0 16px;
  }

  .faq-icon::before,
  .faq-icon::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    width: 14px;
    height: 2px;
    background: var(--color-primary-700);
    transform: translate(-50%, -50%) rotate(0deg);
    transition: transform 150ms ease;
  }

  .faq-icon::after {
    transform: translate(-50%, -50%) rotate(90deg);
  }

  .faq-item[open] .faq-icon::before {
    transform: translate(-50%, -50%) rotate(45deg);
  }

  .faq-item[open] .faq-icon::after {
    transform: translate(-50%, -50%) rotate(-45deg);
  }

  :global([data-theme="dark"]) .section-faq-accordion {
    background: var(--color-gray-1000);
  }

  :global([data-theme="dark"]) .faq-question {
    color: var(--color-gray-100);
  }

  :global([data-theme="dark"]) .faq-answer {
    color: var(--color-gray-400);
  }

  :global([data-theme="dark"]) .faq-item {
    border-bottom-color: var(--color-gray-400);
  }

  :global([data-theme="dark"]) .faq-icon::before,
  :global([data-theme="dark"]) .faq-icon::after {
    background: var(--color-primary-300);
  }
</style>
