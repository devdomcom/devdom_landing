---
import Image from '../atomic/Image.astro';

const {
  variant = 'text-left',
  heading,
  bodyText,
  imageSrc,
  imageAlt,
  class: className = ''
} = Astro.props;

const isTextLeft = variant === 'text-left';
---

<section class={`py-16 ${className}`}>
  <div class="max-w-7xl mx-auto px-6">
    <div class={`grid grid-cols-1 lg:grid-cols-2 gap-8 items-center ${isTextLeft ? '' : 'lg:flex-row-reverse'}`}>
      <!-- Text Block -->
      <div class={`space-y-6 ${isTextLeft ? 'lg:pr-8' : 'lg:pl-8'}`}>
        {heading && <h2 class="text-h3 font-heading text-headings">{heading}</h2>}
        {bodyText && <p class="text-body-md font-body text-text">{bodyText}</p>}
      </div>
      <!-- Visual Block -->
      <div class={`${isTextLeft ? 'lg:pl-8' : 'lg:pr-8'}`}>
        {imageSrc && <Image src={imageSrc} alt={imageAlt} width={600} height={400} class="w-full h-auto rounded-lg" />}
      </div>
    </div>
  </div>
</section>