---
import Image from "../atomic/Image.astro";

const {
  imageSrc,
  imageAlt,
  overlaySrc,
  overlayAlt,
  headline,
  description,
  secondaryCtaText,
  secondaryCtaHref,
} = Astro.props;
---

<section class="hero-layered">
  <div class="hero-layered__overlay" aria-hidden="true"></div>
  {overlaySrc && (
    <div class="hero-layered__art" aria-hidden="true">
      <Image
        src={overlaySrc}
        alt={overlayAlt || ""}
        width={2414}
        height={1260}
        class="hero-layered__art-image"
      />
    </div>
  )}
  <div class="hero-layered__content">
    <div class="hero-layered__grid">
      <div class="hero-layered__spacer" aria-hidden="true"></div>
      <div class="hero-layered__text">
        {imageSrc && (
          <div class="mb-6">
            <Image
              src={imageSrc}
              alt={imageAlt}
              width={200}
              height={80}
              class="h-auto w-auto max-w-[200px]"
            />
          </div>
        )}
        {headline && (
          <h1 class="text-h1 font-heading text-[color:var(--color-white-soft)] max-w-3xl">
            {headline}
          </h1>
        )}
        {description && (
          <p class="mt-6 text-h4 font-heading text-[color:var(--color-white-soft)] max-w-2xl">
            {description}
          </p>
        )}
        {secondaryCtaText && secondaryCtaHref && (
          <div class="mt-8">
            <a
              href={secondaryCtaHref}
              class="text-[color:var(--color-white-soft)] underline-offset-4 hover:underline"
            >
              {secondaryCtaText}
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-layered {
    position: relative;
    width: 110%;
    min-height: 520px;
    background: var(--color-gray-900);
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .hero-layered__overlay {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(600px circle at 20% 20%, rgba(167, 41, 245, 0.22), rgba(0, 0, 0, 0) 60%),
      radial-gradient(520px circle at 75% 60%, rgba(229, 47, 109, 0.18), rgba(0, 0, 0, 0) 62%),
      radial-gradient(520px circle at 60% 10%, rgba(255, 139, 76, 0.12), rgba(0, 0, 0, 0) 60%),
      linear-gradient(115deg, rgba(255, 255, 255, 0.04) 0%, rgba(0, 0, 0, 0) 45%, rgba(167, 41, 245, 0.06) 100%);
    opacity: 0.85;
    pointer-events: none;
  }

  .hero-layered__art {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .hero-layered__art-image {
    position: absolute;
    top: 90%;
    left: 20%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    object-fit: contain;
    opacity: 0.85;
    object-position: left center;
    transform-origin: left center;
    scale: 1.8;
  }

  .hero-layered__content {
    position: relative;
    z-index: 2;
    max-width: 72rem;
    margin: 0 auto;
    padding: 80px 24px;
  }

  .hero-layered__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
  }

  .hero-layered__text {
    text-align: left;
  }

  @media (max-width: 768px) {
    .hero-layered {
      min-height: 460px;
    }
    .hero-layered__content {
      padding: 72px 24px;
    }
    .hero-layered__grid {
      grid-template-columns: 1fr;
    }
    .hero-layered__spacer {
      display: none;
    }
    .hero-layered__text {
      text-align: center;
    }
    .hero-layered__art-image {
      width: 140%;
      height: auto;
      object-position: center;
    }
  }
</style>
