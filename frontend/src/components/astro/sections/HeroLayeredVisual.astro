---
import Image from "../atomic/Image.astro";

const { imageSrc, imageAlt, headline, description, secondaryCtaText, secondaryCtaHref } = Astro.props;
---

<section class="hero-layered">
  <div class="hero-layered__overlay" aria-hidden="true"></div>
  <div class="hero-layered__content">
    {imageSrc && (
      <div class="mb-6">
        <Image
          src={imageSrc}
          alt={imageAlt}
          width={200}
          height={80}
          class="h-auto w-auto max-w-[200px]"
        />
      </div>
    )}
    {headline && (
      <h1 class="text-h1 font-heading text-[color:var(--color-white-soft)] max-w-3xl">
        {headline}
      </h1>
    )}
    {description && (
      <p class="mt-6 text-h4 font-heading text-[color:var(--color-white-soft)] max-w-2xl">
        {description}
      </p>
    )}
    {secondaryCtaText && secondaryCtaHref && (
      <div class="mt-8">
        <a
          href={secondaryCtaHref}
          class="text-[color:var(--color-white-soft)] underline-offset-4 hover:underline"
        >
          {secondaryCtaText}
        </a>
      </div>
    )}
  </div>
</section>

<style>
  .hero-layered {
    position: relative;
    width: 100%;
    min-height: 520px;
    background: var(--color-gray-900);
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .hero-layered__overlay {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(600px circle at 20% 20%, rgba(167, 41, 245, 0.22), rgba(0, 0, 0, 0) 60%),
      radial-gradient(520px circle at 75% 60%, rgba(229, 47, 109, 0.18), rgba(0, 0, 0, 0) 62%),
      radial-gradient(520px circle at 60% 10%, rgba(255, 139, 76, 0.12), rgba(0, 0, 0, 0) 60%),
      linear-gradient(115deg, rgba(255, 255, 255, 0.04) 0%, rgba(0, 0, 0, 0) 45%, rgba(167, 41, 245, 0.06) 100%);
    opacity: 0.85;
    pointer-events: none;
  }

  .hero-layered__content {
    position: relative;
    z-index: 1;
    max-width: 72rem;
    margin: 0 auto;
    padding: 80px 24px;
  }

  @media (max-width: 768px) {
    .hero-layered {
      min-height: 460px;
    }
    .hero-layered__content {
      padding: 72px 24px;
    }
  }
</style>
