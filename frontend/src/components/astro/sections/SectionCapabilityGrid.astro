---
const { title, items = [] } = Astro.props;
---

<section class="w-full">
  <div class="max-w-7xl mx-auto px-6">
    {title && (
      <h2 class="text-h2 font-heading text-headings">{title}</h2>
    )}
    <div class="mt-10 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((item) => (
        <div class="bg-surface-card rounded-[15px] border-2 border-[color:var(--color-primary-100)] px-6 py-6">
          {item.icon && (
            <span class="text-primary-700" aria-hidden="true">
              <span class="block" set:html={item.icon}></span>
            </span>
          )}
          {item.title && (
            <h3 class="mt-4 text-h5 font-heading text-headings">{item.title}</h3>
          )}
          {item.description && (
            <p class="mt-3 text-body-md font-body text-gray-600">{item.description}</p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
