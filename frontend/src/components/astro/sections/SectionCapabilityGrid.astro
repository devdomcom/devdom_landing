---
const { title, items = [] } = Astro.props;
---

<section class="section-capability-grid w-full">
  <div class="max-w-7xl mx-auto px-6">
    {title && (
      <h2 class="section-capability-grid__title text-h2 font-heading text-headings">{title}</h2>
    )}
    <div class="mt-10 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((item) => (
        <div class="section-capability-grid__card bg-surface-card rounded-[15px] border-2 border-[color:var(--color-primary-100)] px-6 py-6">
          {item.icon && (
            <span class="section-capability-grid__icon text-primary-700" aria-hidden="true">
              <span class="block" set:html={item.icon}></span>
            </span>
          )}
          {item.title && (
            <h3 class="section-capability-grid__item-title mt-4 text-h5 font-heading text-headings">{item.title}</h3>
          )}
          {item.description && (
            <p class="section-capability-grid__item-subtitle mt-3 text-body-md font-body text-gray-600">{item.description}</p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  :global([data-theme="dark"]) .section-capability-grid__title {
    color: var(--color-gray-100);
  }

  :global([data-theme="dark"]) .section-capability-grid__card {
    background: linear-gradient(135deg, rgba(200, 121, 248, 0.06) 0%, rgba(200, 121, 248, 0) 100%), var(--color-gray-900);
    border-color: transparent;
    box-shadow: inset 0 0 0 1px var(--color-gray-800);
  }

  :global([data-theme="dark"]) .section-capability-grid__icon {
    color: var(--color-primary-300);
  }

  :global([data-theme="dark"]) .section-capability-grid__item-title {
    color: var(--color-gray-100);
  }

  :global([data-theme="dark"]) .section-capability-grid__item-subtitle {
    color: var(--color-gray-300);
  }
</style>
