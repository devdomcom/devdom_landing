---
import processFlow from "../../../assets/images/decorations/process-flow.svg";

const { title, subtitle, steps = [] } = Astro.props;
---

<section class="w-full">
  <div class="max-w-7xl mx-auto px-6">
    <div class="process-flow">
      <div class="process-flow__intro">
        {title && (
          <h2 class="text-h2 font-heading text-headings">{title}</h2>
        )}
        {subtitle && (
          <p class="mt-3 text-body-md font-body text-gray-600">{subtitle}</p>
        )}
      </div>

      <div class="process-flow__visual-wrap">
        <div class="process-flow__visual">
          <img
            src={processFlow.src}
            alt=""
            aria-hidden="true"
            class="process-flow__path"
          />

          <div class="process-flow__steps">
            {steps.map((step, index) => (
              <div class={`process-flow__step process-flow__step--${index + 1}`}>
                <div class="process-flow__number" aria-hidden="true">{index + 1}</div>
                <div class="process-flow__node" aria-hidden="true"></div>
                {step.title && (
                  <h3 class="text-h4 font-heading text-headings">{step.title}</h3>
                )}
                {step.description && (
                  <p class="mt-2 text-body-sm font-body text-gray-900 max-w-xs">{step.description}</p>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>

      <div class="process-flow__mobile">
        {steps.map((step, index) => (
          <div class="process-flow__mobile-step">
            <div class="process-flow__mobile-number" aria-hidden="true">{index + 1}</div>
            <div>
              <h3 class="text-h4 font-heading text-headings">{step.title}</h3>
              <p class="mt-2 text-body-sm font-body text-gray-900">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .process-flow {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .process-flow__intro {
    max-width: 560px;
  }

  .process-flow__visual-wrap {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .process-flow__visual {
    position: relative;
    width: 1440px;
    height: 440px;
    overflow: visible;
    --step-1-left: 22%;
    --step-1-top: 45%;
    --step-2-left: 50%;
    --step-2-top: 20%;
    --step-3-right: 1.5%;
    --step-3-top: -21%;
  }

  .process-flow__path {
    width: 1440px;
    height: 360px;
    object-fit: contain;
    display: block;
    margin-left: 0;
    margin-top: -95px;
  }

  .process-flow__steps {
    position: absolute;
    inset: 0;
  }

  .process-flow__step {
    position: absolute;
    width: 250px;
  }

  .process-flow__step--1 {
    left: var(--step-1-left);
    top: var(--step-1-top);
  }

  .process-flow__step--2 {
    left: var(--step-2-left);
    top: var(--step-2-top);
  }

  .process-flow__step--3 {
    right: var(--step-3-right);
    top: var(--step-3-top);
  }

  .process-flow__node {
    width: 34px;
    height: 34px;
    border-radius: 10px;
    background: var(--color-white);
    border: 2px solid var(--color-gray-100);
    box-shadow: 0 10px 24px rgba(48, 25, 52, 0.12);
    margin-bottom: 12px;
  }

  .process-flow__number {
    position: absolute;
    font-size: 170px;
    font-weight: 700;
    color: var(--color-gray-100);
    opacity: 1;
    z-index: 0;
    line-height: 1;
    top: -70px;
    left: -10px;
    pointer-events: none;
  }

  .process-flow__step--1 .process-flow__number {
    transform: translate(170%, 0);
  }

  .process-flow__step--2 .process-flow__number {
    transform: translate(120%, 0);
  }

  .process-flow__step--3 .process-flow__number {
    transform: translate(130%, -5%);
  }

  .process-flow__mobile {
    display: none;
    flex-direction: column;
    gap: 24px;
  }

  .process-flow__mobile-step {
    display: flex;
    gap: 16px;
    align-items: flex-start;
  }

  .process-flow__mobile-number {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: var(--color-gray-100);
    color: var(--color-gray-900);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
  }

  @media (max-width: 900px) {
    .process-flow__step--2 {
      left: 36%;
      top: 100px;
    }

    .process-flow__step--3 {
      right: 0;
      top: 40px;
    }
  }

  @media (max-width: 992px) {
    .process-flow__visual {
      display: none;
    }

    .process-flow__mobile {
      display: flex;
    }
  }

  @media (max-width: 1279px) {
    .process-flow__visual {
      width: 1200px;
      height: 440px;
      --step-1-top: 47%;
      --step-3-top: -16%;
    }
  }

  @media (max-width: 1024px) {
    .process-flow__visual {
      width: 1024px;
      height: 440px;
      --step-1-left: 10%;
      --step-1-top: 42%;
      --step-2-left: 45%;
      --step-3-right: -3.5%;
      --step-3-top: -6%;
    }

    .process-flow__number {
      font-size: 140px;
    }

    .process-flow__step--1 .process-flow__number {
      transform: translate(190%, 20%);
    }

    .process-flow__step--2 .process-flow__number {
      transform: translate(120%, 20%);
    }

    .process-flow__step--3 .process-flow__number {
      transform: translate(150%, 20%);
    }
  }

  @media (max-width: 993px) {
    .process-flow__visual {
      width: 992px;
      height: 440px;
      --step-3-top: -4%;
    }
  }

  @media (max-width: 768px) {
    .process-flow__mobile {
      display: flex;
    }
  }
</style>
