---
import Link from '../atomic/Link.astro';

const { headline, description, linkHref, linkText, class: className = '' } = Astro.props;
---

<section class={`section-centered bg-primary-100 rounded-2xl px-10 py-15 text-center ${className}`}>
  <div class="flex flex-col items-center space-y-6">
    {headline && <h2 class="section-centered__title text-h2 font-heading text-headings">{headline}</h2>}
    {description && <h4 class="section-centered__subtitle text-h4 font-heading text-headings">{description}</h4>}
    {(linkHref && linkText) && <Link href={linkHref}>{linkText}</Link>}
  </div>
</section>

<style>
  :global([data-theme="dark"]) .section-centered {
    background: var(--color-gray-900);
    box-shadow: inset 0 0 0 1px var(--color-gray-800);
  }

  :global([data-theme="dark"]) .section-centered__title {
    color: var(--color-gray-100);
  }

  :global([data-theme="dark"]) .section-centered__subtitle {
    color: var(--color-gray-400);
  }
</style>
