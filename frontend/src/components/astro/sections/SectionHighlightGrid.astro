---
const { title, subtitle, items = [] } = Astro.props;
---

<section class="w-full">
  <div class="max-w-7xl mx-auto px-6">
    <div class="bg-[color:var(--color-gray-900)] rounded-[15px] px-10 py-[60px] text-center">
      {title && (
        <h2 class="text-h2 font-heading text-[color:var(--color-white-soft)]">{title}</h2>
      )}
      {subtitle && (
        <p class="mt-4 text-h4 font-heading text-[color:var(--color-white-soft)] max-w-3xl mx-auto">
          {subtitle}
        </p>
      )}
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-12">
        {items.map((item, index) => (
          <div
            class={`px-6 ${index % 2 === 1 ? "md:border-l md:border-[color:var(--color-white-soft)]" : ""} ${index % 3 === 1 ? "lg:border-x lg:border-[color:var(--color-white-soft)]" : "lg:border-l-0 lg:border-r-0"} ${index % 3 === 2 ? "lg:border-l-0" : ""}`}
          >
            {item.icon && (
              <span class="text-[color:var(--color-white-soft)] flex justify-center" aria-hidden="true">
                <span class="block mx-auto" set:html={item.icon}></span>
              </span>
            )}
            {item.label && (
              <h3 class="mt-4 text-body-lg font-body text-[color:var(--color-white-soft)]">
                {item.label}
              </h3>
            )}
            {item.description && (
              <p class="mt-3 text-body-md font-body text-[color:var(--color-white-soft)]">
                {item.description}
              </p>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
